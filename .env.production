# 本番環境の秘密情報（Git管理外）

# 本番環境設定
ENVIRONMENT=production
LOG_LEVEL=INFO
IS_MAINNET=true

# 本番用データベース設定
DB_PASSWORD=SuperSecureProductionPassword2024!
REDIS_PASSWORD=SecureRedisProductionPassword2024!
GRAFANA_PASSWORD=SecureGrafanaProductionPassword2024!

# 本番用APIキー
API_KEY=ak_live_YOUR_REAL_PRODUCTION_API_KEY
PRIVATE_KEY=0xYOUR_REAL_PRODUCTION_PRIVATE_KEY

# 本番用通知設定
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/PROD/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/PROD/WEBHOOK/URL

# 本番用ボット設定
MAX_POSITION_SIZE=1.0
RISK_LIMIT=0.05

# 本番用データベース接続
DB_HOST=prod-postgres-server
DB_PORT=5432
DB_NAME=trading_production
DB_USER=trader_prod

# 本番用Redis接続
REDIS_HOST=prod-redis-server
REDIS_PORT=6379

# セキュリティ設定
SSL_CERT_PATH=/etc/ssl/certs/trading-bot.crt
SSL_KEY_PATH=/etc/ssl/private/trading-bot.key

# 監視・アラート設定
ALERT_EMAIL=admin@yourcompany.com
PAGERDUTY_TOKEN=your_pagerduty_integration_token