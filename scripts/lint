#!/bin/bash
set -e

echo "ðŸ§¹ Running code formatting and linting..."

# Format code with black
uv run --with-editable . --with-requirements requirements/dev.txt black shared/ bot/ --config pyproject.toml

# Lint with ruff
uv run --with-editable . --with-requirements requirements/dev.txt ruff check shared/ bot/ --config pyproject.toml

# Sort imports with isort
uv run --with-editable . --with-requirements requirements/dev.txt isort shared/ bot/ --settings-path pyproject.toml

echo "âœ… Linting completed successfully"
